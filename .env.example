# Discord Configuration
DISCORD_TOKEN=YOUR_KEY_HERE

# Claude API
CLAUDE_API_KEY=YOUR_KEY_HERE

# Google Cloud Drive API
GOOGLE_CREDENTIALS_PATH=/opt/claude-bot/credentials/google_credentials.json

# Bot Owners (comma-separated Discord User IDs)
BOT_OWNERS=YOUR_DISCORD_ID

# Database password
POSTGRES_DB_PASSWORD=YOUR_DB_PASSWORD
POSTGRES_DB=claude_bot
POSTGRES_USER=claude
POSTGRES_HOST=postgres

# Docker will use your current user ID
USER_ID=$(id -u)
GROUP_ID=$(id -g)

# Logging
LOG_LEVEL=INFO
